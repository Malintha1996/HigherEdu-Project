<div class="container-fluid">
<div class="modal fade" id="formmodal">
   <div class="modal-dialog modal-dialog-centered">
     <div class="modal-content">
       <!--modal header-->
        <div class="modal-header">
          <h4 class="modal title">Add New Course</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!--modal body-->
        <div class="modal-body">
          <form id="addcourseform" >
           <div class="form-group">
             <label for="iname">Institute Name:</label>
             <input disabled type="text"  value="Sakya" class="form-control" id="iname">
           </div>
           <div class="form-group">
             <label for="iid">Institute ID:</label>
             <input disabled type="text" value="ins1sakya" class="form-control" id="iid">
           </div>
           <div class="form-group">
             <label for="courseName">Course Name:</label>
             <input  type="text" class="form-control" id="courseName">
           </div>
           <div class="form-group">
             <label for="teacher">Teacher(s):</label>
             <input  type="" class="form-control" id="teacher">
           </div>
           <div class="form-group">
           <label for="stream">A/L/After A/L</label>
           <select  class="form-control" id="type">
             <option selected>course type</option>
             <option value="AdvancedLevel">Advanced Level</option>
             <option value="AfterAdvancedLevel">After A/L</option>
           </select>
         </div>
           <div class="form-group stream " id="astream" >
             <label for="stream">Stream:</label>
             <select  class="form-control" id="alstream">
               <option selected>input stream </option>
               <option value="Arts">Arts</option>
               <option value="Science">Mathematics</option>
               <option value="commerce">Biology</option>
               <option value="Technology">Technology</option>
            </select>
           </div>
           <div class="form-group">
           <label for="type">Type</label>
           <select  class="form-control" id="type">
             <option selected>course type</option>
             <option value="mass">Mass</option>
             <option value="group">Group</option>
             <option value="induvidual">Induvidual</option>
           </select>
         </div>
           <button type="submit" id="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
        <div class="modal-footer">
           <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
       </div>
     </div>
   </div>
</div>
</div>
